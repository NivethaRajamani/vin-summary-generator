[flake8]
# Configuration for flake8 linting

# Maximum line length
max-line-length = 88

# Select error codes to check
select = E,W,F,C

# Ignore specific error codes
ignore =
    # E203: whitespace before ':' (conflicts with black)
    E203,
    # W503: line break before binary operator (conflicts with black)
    W503,
    # E501: line too long (handled by max-line-length)
    E501

# Exclude directories and files
exclude =
    .git,
    __pycache__,
    .pytest_cache,
    .venv,
    venv,
    env,
    build,
    dist,
    *.egg-info

# Maximum complexity for functions
max-complexity = 10

# Per-file ignores
per-file-ignores =
    # Tests can have longer lines and more complex fixtures
    tests/*:E501,C901
    # __init__.py files can be empty
    __init__.py:F401

# Show source code for each error
show-source = True

# Show pep8 section names
show-pep8 = True

# Count errors
count = True

# Statistics
statistics = True